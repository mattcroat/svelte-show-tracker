generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Show {
  id        String  @id @default(cuid())
  name      String
  slug      String  @unique
  image     String
  completed Boolean @default(false)
  updated   Int

  seasons  Season[]
  episodes Episode[]
  stats    Stats?
}

model Season {
  id        String  @id @default(cuid())
  number    Int
  image     String
  completed Boolean @default(false)

  show   Show   @relation(fields: [showId], references: [id])
  showId String
}

model Episode {
  id        String  @id @default(cuid())
  name      String
  season    Int
  number    Int
  image     String
  completed Boolean @default(false)

  show   Show   @relation(fields: [showId], references: [id])
  showId String
}

model Stats {
  id       String @id @default(cuid())
  watched  Int    @default(0)
  episodes Int

  show   Show   @relation(fields: [showId], references: [id])
  showId String @unique
}
